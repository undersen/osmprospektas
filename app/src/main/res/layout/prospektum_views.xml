<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/prospektum_view_card"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        app:elevation="10px"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/prospektum_view_imageview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/background_login"
            android:scaleType="fitXY"
            android:foreground="@color/colorPrimary"/>

        <TextView
            android:id="@+id/prospektum_view_text_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:background="@color/black_alpha"
            android:paddingLeft="20dp"
            android:text="Este es un Texto"
            android:textColor="@color/white"
            android:textSize="80px" />

        <TextView
            android:id="@+id/prospektum_view_text_description"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/prospektum_view_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="24dp"
            android:paddingTop="24dp"
            android:text="" />

        <Button
            android:id="@+id/prospektum_view_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="Edit"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="200dp"
            android:textColor="@color/white"
            ></Button>


    </android.support.v7.widget.CardView>
</RelativeLayout>